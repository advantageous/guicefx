            xmlns="http://javafx.com/javafx/8" fx:controller="com.example.main.MainViewController">

    <top>
        <HBox spacing="4">
            <children>
                <Button onAction="#showPage1" text="Show Page 1"/>
                <Button onAction="#showPage2" text="Show Page 2"/>
            </children>
        </HBox>
    </top>

    <center>
        <BorderPane fx:id="contentArea"/>
    </center>

</BorderPane>
