<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane fx:id="root" prefHeight="80.0" prefWidth="200.0" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.mvp.main.MainPresenter"
            xmlns="http://javafx.com/javafx/8">

    <top>
        <HBox spacing="4">
            <children>
                <Button fx:id="button1" text="Show Page 1" onAction="#gotoPage1"/>
                <Button fx:id="button2" text="Show Page 2" onAction="#gotoPage2"/>
            </children>
        </HBox>
    </top>

    <center>
        <BorderPane fx:id="contentArea"/>
    </center>

</BorderPane>
